.wage-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #ffffff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #606266;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.filter-item.active {
  color: #409eff;
  background: #ecf5ff;
  font-weight: 600;
}

/* 汇总卡片 */
.summary-card {
  background: linear-gradient(135deg, #67c23a, #85ce61);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  color: #ffffff;
}

.summary-main {
  text-align: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 24rpx;
}

.summary-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.summary-value {
  font-size: 72rpx;
  font-weight: bold;
}

.summary-detail {
  display: flex;
  justify-content: center;
}

.detail-item {
  text-align: center;
  padding: 0 60rpx;
}

.detail-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.detail-divider {
  width: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 列表区域 */
.list-section {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.record-list {
  margin-top: 10rpx;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-date {
  font-size: 24rpx;
  color: #909399;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #67c23a;
}

.record-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 6rpx;
}

.process-name {
  font-size: 24rpx;
  color: #909399;
}

.record-qty {
  font-size: 24rpx;
  color: #909399;
}

/* 加载和空状态 */
.loading, .empty {
  padding: 60rpx 0;
  text-align: center;
  color: #909399;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #409eff;
  font-size: 28rpx;
}
