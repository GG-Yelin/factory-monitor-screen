<view class="profile-page">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="avatar">
      <text>{{userInfo.name ? userInfo.name[0] : 'U'}}</text>
    </view>
    <view class="user-info">
      <view class="user-name">{{userInfo.name || '未登录'}}</view>
      <view class="user-meta">
        <text class="employee-no">工号: {{userInfo.employeeNo || '-'}}</text>
      </view>
      <view class="user-tags">
        <text class="tag" wx:if="{{userInfo.teamName}}">{{userInfo.teamName}}</text>
        <text class="tag" wx:for="{{userInfo.roles}}" wx:key="*this">{{getRoleLabel(item)}}</text>
      </view>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="goToWage">
      <view class="menu-icon wage-icon">
        <text>&#xe61b;</text>
      </view>
      <view class="menu-text">我的工资</view>
      <view class="menu-arrow">></view>
    </view>

    <view class="menu-item" bindtap="goToGuide">
      <view class="menu-icon guide-icon">
        <text>&#xe622;</text>
      </view>
      <view class="menu-text">操作指南</view>
      <view class="menu-arrow">></view>
    </view>

    <view class="menu-item" bindtap="goToSettings">
      <view class="menu-icon settings-icon">
        <text>&#xe623;</text>
      </view>
      <view class="menu-text">账号设置</view>
      <view class="menu-arrow">></view>
    </view>
  </view>

  <!-- 关于 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="showAbout">
      <view class="menu-icon about-icon">
        <text>&#xe624;</text>
      </view>
      <view class="menu-text">关于系统</view>
      <view class="menu-arrow">></view>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="handleLogout">退出登录</button>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text>MES生产执行系统 v1.0.0</text>
  </view>
</view>
