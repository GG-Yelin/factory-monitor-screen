.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #409eff 0%, #66b1ff 50%, #f5f5f5 50%);
}

.logo-section {
  padding: 100rpx 0 60rpx;
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: #ffffff;
  border-radius: 32rpx;
  font-size: 56rpx;
  font-weight: bold;
  color: #409eff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}

.form-section {
  flex: 1;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx;
  margin-top: -40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  border: 2rpx solid #dcdfe6;
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 32rpx;
  background: #f5f7fa;
}

.input-icon {
  width: 60rpx;
  text-align: center;
  color: #909399;
  font-size: 36rpx;
}

.input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  border: none;
  background: transparent;
}

.input-suffix {
  width: 60rpx;
  text-align: center;
  color: #909399;
  font-size: 36rpx;
}

.remember-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #606266;
}

.remember-row switch {
  transform: scale(0.7);
  margin-right: 10rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: #409eff;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  background: #337ecc;
}

.login-btn[disabled] {
  background: #a0cfff;
}

.footer {
  padding: 40rpx;
  text-align: center;
}

.text-muted {
  color: #c0c4cc;
  font-size: 24rpx;
}
