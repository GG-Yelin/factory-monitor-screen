.operator-page {
  padding-bottom: 120rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #409eff, #66b1ff);
  padding: 40rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-meta {
  font-size: 24rpx;
  opacity: 0.9;
}

.employee-no {
  margin-right: 20rpx;
}

.team-name {
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.header-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

/* 卡片 */
.card {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.card-header .card-title {
  margin-bottom: 0;
}

.card-more {
  font-size: 26rpx;
  color: #909399;
}

/* 快捷操作网格 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  text-align: center;
  padding: 20rpx 0;
}

.action-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  font-size: 48rpx;
}

.scan-icon {
  background: #e8f4ff;
  color: #409eff;
}

.task-icon {
  background: #fef0e6;
  color: #e6a23c;
}

.wage-icon {
  background: #e8f8e8;
  color: #67c23a;
}

.profile-icon {
  background: #fef0f0;
  color: #f56c6c;
}

.action-text {
  font-size: 26rpx;
  color: #606266;
}

/* 任务列表 */
.task-list {
  margin-top: 10rpx;
}

.task-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ebeef5;
}

.task-item:last-child {
  border-bottom: none;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-no {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
}

.tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.tag-primary {
  background: #ecf5ff;
  color: #409eff;
}

.tag-success {
  background: #f0f9eb;
  color: #67c23a;
}

.tag-warning {
  background: #fdf6ec;
  color: #e6a23c;
}

.tag-info {
  background: #f4f4f5;
  color: #909399;
}

.task-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.info-row .label {
  color: #909399;
  width: 80rpx;
}

.info-row .value {
  color: #606266;
  flex: 1;
}

.progress-bar {
  height: 12rpx;
  background: #ebeef5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-inner {
  height: 100%;
  background: #409eff;
  border-radius: 6rpx;
  transition: width 0.3s;
}

/* 加载和空状态 */
.loading, .empty {
  padding: 60rpx 0;
  text-align: center;
  color: #909399;
}
