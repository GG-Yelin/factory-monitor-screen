.inspection-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 180rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #ebeef5;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.info-item {
  padding: 12rpx 0;
}

.info-label {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #303133;
}

/* 表单 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
}

.required {
  color: #f56c6c;
  margin-right: 4rpx;
}

/* 数量输入 */
.quantity-input {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 8rpx;
  border: 2rpx solid #dcdfe6;
  overflow: hidden;
}

.qty-btn {
  width: 96rpx;
  height: 80rpx;
  background: #ffffff;
  border: none;
  font-size: 40rpx;
  color: #606266;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.qty-btn:active {
  background: #f5f7fa;
}

.qty-input {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  border: none;
  background: transparent;
}

.unqualified-display {
  padding: 20rpx 24rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.text-danger {
  color: #f56c6c;
}

/* 原因标签 */
.reason-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.reason-tag {
  padding: 12rpx 24rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #606266;
  border: 2rpx solid transparent;
}

.reason-tag.active {
  background: #ecf5ff;
  color: #409eff;
  border-color: #409eff;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  background: #f5f7fa;
  box-sizing: border-box;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: #f56c6c;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.image-add {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #dcdfe6;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
}

.image-add text:first-child {
  font-size: 56rpx;
  color: #c0c4cc;
}

.add-text {
  font-size: 22rpx;
  color: #909399;
  margin-top: 8rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #67c23a;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background: #529b2e;
}

.submit-btn[disabled] {
  background: #b3e19d;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: #c0c4cc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 40rpx;
}

.scan-btn {
  width: 300rpx;
  height: 88rpx;
  background: #67c23a;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}
