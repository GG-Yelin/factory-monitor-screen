.tasks-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #ffffff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #606266;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.filter-item.active {
  color: #409eff;
  background: #ecf5ff;
  font-weight: 600;
}

/* 任务列表 */
.task-list {
  padding: 20rpx;
}

.task-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-primary {
  background: #ecf5ff;
  color: #409eff;
}

.tag-success {
  background: #f0f9eb;
  color: #67c23a;
}

.tag-warning {
  background: #fdf6ec;
  color: #e6a23c;
}

.tag-info {
  background: #f4f4f5;
  color: #909399;
}

.task-body {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.info-row {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: #909399;
  width: 80rpx;
}

.info-row .value {
  color: #606266;
  flex: 1;
}

.text-success {
  color: #67c23a;
  font-weight: 600;
}

/* 进度条 */
.task-progress {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #ebeef5;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, #409eff, #66b1ff);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 26rpx;
  color: #409eff;
  font-weight: 600;
  min-width: 80rpx;
  text-align: right;
}

/* 底部 */
.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
}

.time {
  font-size: 24rpx;
  color: #909399;
}

.action-btn {
  padding: 12rpx 32rpx;
  background: #409eff;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 32rpx;
}

.action-btn:active {
  background: #337ecc;
}

/* 加载和空状态 */
.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #909399;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #409eff;
  font-size: 28rpx;
}
