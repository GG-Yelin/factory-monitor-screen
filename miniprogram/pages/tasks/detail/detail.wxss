.detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 160rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
  margin-bottom: 20rpx;
}

.task-no {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag-primary { background: #ecf5ff; color: #409eff; }
.tag-success { background: #f0f9eb; color: #67c23a; }
.tag-warning { background: #fdf6ec; color: #e6a23c; }
.tag-info { background: #f4f4f5; color: #909399; }

/* 信息区 */
.info-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.info-item {
  padding: 12rpx 0;
}

.info-label {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 30rpx;
  color: #303133;
  font-weight: 500;
}

.text-primary { color: #409eff; }
.text-success { color: #67c23a; }
.text-danger { color: #f56c6c; }

/* 进度区 */
.progress-section {
  padding-top: 24rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #606266;
}

.progress-percent {
  color: #409eff;
  font-weight: 600;
}

.progress-bar {
  height: 20rpx;
  background: #ebeef5;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, #409eff, #66b1ff);
  border-radius: 10rpx;
  transition: width 0.3s;
}

/* 报工记录 */
.report-list {
  margin-top: 16rpx;
}

.report-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ebeef5;
}

.report-item:last-child {
  border-bottom: none;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.report-time {
  font-size: 26rpx;
  color: #909399;
}

.report-amount {
  font-size: 30rpx;
  font-weight: 600;
}

.report-body {
  display: flex;
  gap: 32rpx;
  margin-bottom: 8rpx;
}

.report-info {
  font-size: 26rpx;
}

.report-info .label {
  color: #909399;
}

.report-info .value {
  color: #606266;
  margin-left: 8rpx;
}

.report-remark {
  font-size: 24rpx;
  color: #909399;
  background: #f5f7fa;
  padding: 12rpx;
  border-radius: 8rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #909399;
  font-size: 28rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.report-btn {
  width: 100%;
  height: 96rpx;
  background: #409eff;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.report-btn:active {
  background: #337ecc;
}
